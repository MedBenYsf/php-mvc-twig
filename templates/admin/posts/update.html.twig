{% extends "base.html.twig" %}

{% block body %}
    <h2>Add new post</h2>
    <form method="post">
        <div class="form-group">
            <label>Title:</label>
            <input type="text" name="title" class="form-control" value="{{post.title}}"/>
        </div>
        <div class="form-group">
            <label>Content:</label>
            <textarea class="form-control" name="content">{{post.content}}</textarea>
        </div>
        <button type="submit" class="btn btn-success mt-2" name="supprimer">Enregistrer</button>
    </form>
{% endblock %}